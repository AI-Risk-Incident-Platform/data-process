@prefix airo: <https://w3id.org/airo#> .
@prefix : <https://w3id.org/airo#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix terms: <http://purl.org/dc/terms/> .
@prefix ex: <https://example.com/aievents#> .
@base <https://w3id.org/airo#> .

ex:TwitterAlgorithm rdf:type airo:AISystem ;
    rdfs:label "Twitter Algorithm"@en ;
    rdfs:label "推特算法"@zh ;
    airo:hasRisk ex:PoliticalContentAmplificationBias ;
    airo:hasCapability ex:ContentAmplification ;
    airo:isDevelopedBy ex:TwitterInc ;
    airo:hasPurpose ex:UserEngagementMaximization ;
    airo:hasStakeholder ex:RightWingPoliticians ;
    airo:isAppliedWithinDomain ex:SocialMediaPlatforms ;
    airo:usesTechnique ex:RecommendationAlgorithm .

ex:PoliticalContentAmplificationBias rdf:type airo:Risk ;
    rdfs:label "Political Content Amplification Bias Risk"@en ;
    rdfs:label "政治内容放大偏见风险"@zh ;
    airo:hasConsequence ex:PoliticalPolarization ;
    airo:isRiskSourceFor ex:AlgorithmicBiasInTrainingData .

ex:PoliticalPolarization rdf:type airo:Consequence ;
    rdfs:label "Political Polarization Consequence"@en ;
    rdfs:label "政治两极分化后果"@zh ;
    airo:hasImpact ex:PublicDiscourseDistortion .

ex:ContentAmplification rdf:type airo:AICapability ;
    rdfs:label "Content Amplification Capability"@en ;
    rdfs:label "内容放大能力"@zh .

ex:RightWingPoliticians rdf:type airo:Stakeholder ;
    rdfs:label "Right-Wing Politicians"@en ;
    rdfs:label "右翼政客"@zh .

ex:TwitterInc rdf:type airo:AIOperator ;
    rdfs:label "Twitter Inc."@en ;
    rdfs:label "推特公司"@zh .

ex:PublicDiscourseDistortion rdf:type airo:Impact ;
    rdfs:label "Public Discourse Distortion Impact"@en ;
    rdfs:label "公共话语扭曲影响"@zh ;
    airo:hasImpactOnStakeholder ex:RightWingPoliticians .

ex:UserEngagementMaximization rdf:type airo:Purpose ;
    rdfs:label "User Engagement Maximization Purpose"@en ;
    rdfs:label "用户参与度最大化目的"@zh .

ex:SocialMediaPlatforms rdf:type airo:Domain ;
    rdfs:label "Social Media Platforms Domain"@en ;
    rdfs:label "社交媒体平台领域"@zh .

ex:RecommendationAlgorithm rdf:type airo:AITechnique ;
    rdfs:label "Recommendation Algorithm Technique"@en ;
    rdfs:label "推荐算法技术"@zh .

ex:AlgorithmicBiasInTrainingData rdf:type airo:RiskSource ;
    rdfs:label "Algorithmic Bias in Training Data Risk Source"@en ;
    rdfs:label "训练数据中的算法偏见风险源"@zh .